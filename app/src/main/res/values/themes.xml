<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SipKip" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SipKip.NoActionBar">
        <!-- Don't request support action bar. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SipKip.NoActionBar.SurfaceStatusBar" parent="Theme.SipKip.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.SipKip.PopupOverlay" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="android:backgroundTint">?attr/colorSecondaryContainer</item>
    </style>

    <style name="Theme.SipKip.RoundedImageView">
        <item name="cornerSize">20%</item>
    </style>
</resources>